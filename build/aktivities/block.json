{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "create-block/activities",
  "version": "0.1.0",
  "title": "Aktivity",
  "category": "widgets",
  "icon": "grid-view",
  "description": "Block pre zobrazenie aktiv√≠t s ikonami a popisom.",
  "example": {},
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "activities": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "icon": {
            "type": "string",
            "default": "star"
          },
          "title": {
            "type": "string",
            "source": "html",
            "selector": ".activity-title"
          },
          "description": {
            "type": "string",
            "source": "html",
            "selector": ".activity-description"
          }
        }
      }
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "textAlignment": {
      "type": "string",
      "default": "center"
    },
    "textColor": {
      "type": "string",
      "default": "#333333"
    },
    "accentColor": {
      "type": "string",
      "default": "#fcb722"
    }
  },
  "textdomain": "slider",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}